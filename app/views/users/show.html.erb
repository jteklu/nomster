<div class="booyah-box">
	<div class="col-xs-4">
		<%= image_tag 'user.png' %>
	</div>

	<div class="col-xs-8">
		<h2><%= @user.email %></h2>
		<h4>Member since: <%= @user.created_at.strftime("%B %d, %Y") %></h4>
		<h5><%= @user.comments.count %> total comments</h5>
		<h5><%= @user.comments.where(:rating => '5_stars').count %> total 5 star reviews</h5>
	</div>
	<div class="clear"></div>
</div>

<div>
	<br /><br />
	<h2 class="text-center">My comments</h2>
	<br /><br />
	<% @user.comments.each do |comment| %>
		<div class ="col-xs-10 col-xs-offset-1 col-sm-7 col-sm-offset-1">
			<h2 class="col-xs-12 col-sm-6"><%= link_to comment.place.name, place_path(comment.place) %></h2>
			<blockquote>
				<% if comment.humanized_rating.present? %>
					<b><%= comment.humanized_rating %></b> -
				<% end %>
				<%= comment.message %>
				<small><%= comment.user.email %></small>
			</blockquote>
		</div>
	<% end %>
</div>

<div class="clear"></div>
<div>
	<br /><br />
	<h2 class="text-center">My Places</h2>
	<br /><br />
		<% @user.places.each do |place| %>	
			<div class="booyah-box col-xs-10 col-xs-offset-1">
				<h1><%= link_to place.name, place_path(place) %></h1>
				<i><%= place.address %></i><br /><br />
				<p><%= place.description %></p><br />
				<% if place.user.present? %>
					<small><%= place.user.email%></small>
				<% end %>
				<% if place.comments.present? %>
					<div class="col-xs-12">
						<% if place.comments.last.humanized_rating.present? %>
					  <blockquote>
					      <b><%= place.comments.last.humanized_rating %></b> -
					    <% end %>
					    <%= place.comments.last.message %>
					    <small><%= place.comments.last.user.email %></small>
					  </blockquote>
					</div>
				<% end %>
			</div>
		<% end %>
</div>